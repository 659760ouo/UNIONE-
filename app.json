{
  "expo": {
    "name": "yrsdaily",
    "slug": "goaltracker-32d4c",
    "scheme": "com.yrsdaily.unione", // Your core custom scheme (critical!)
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yrsdaily.unione",
      // Add iOS URL scheme for deep linking (matches your custom scheme)
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["com.yrsdaily.unione"] // Matches "scheme" above
          }
        ]
      }
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/unione.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yrsdaily.unione",
      // Add Android intent filter to handle deep links with your scheme
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "category": ["android.intent.category.DEFAULT", "android.intent.category.BROWSABLE"],
          "data": {
            "scheme": "com.yrsdaily.unione" // Matches "scheme" above
          }
        }
      ],
      // Fix: Move googleServicesFile to the root of "android" (not inside build-properties)
      "googleServicesFile": "./app/google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/splash.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 21, // Required for Google Sign-In (add this!)
            "compileSdkVersion": 33,
            "targetSdkVersion": 33
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8dde8e6c-401d-463d-a836-ab74f4029918"
      },
      "redirectUri": "https://auth.expo.io/@yrsdaily/goaltracker-32d4c" // Your Expo redirect URI
    }
  }
}